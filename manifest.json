{
    "manifest_version": 3,
    "name": "Yandex Tracker Log Viewer",
    "version": "1.3.1",
    "description": "Плагин для удобного просмотра логов HTTP-запросов в Яндекс Трекере.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "https://st-api.yandex-team.ru/*",
      "https://st.yandex-team.ru/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "https://st-api.yandex-team.ru/v2/queues/*/triggers/*/webhooks/log*",
          "https://st.yandex-team.ru/admin/queue/*/automation/triggers",
          "https://st.yandex-team.ru/admin/queue/*/automation/all",
          "https://st.yandex-team.ru/*/history",
          "https://st.yandex-team.ru/[A-Z]+-*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }