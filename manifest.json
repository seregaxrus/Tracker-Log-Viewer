{
    "manifest_version": 3,
    "name": "Yandex Tracker Trigger Log Viewer",
    "version": "1.5.2",
    "description": "Просмотр логов HTTP-запросов триггеров в Yandex Tracker",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://st.yandex-team.ru/*",
      "https://st-api.yandex-team.ru/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://st.yandex-team.ru/*",
          "https://st-api.yandex-team.ru/*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }